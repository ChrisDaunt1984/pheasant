{%- from 'macro.jinja2' import output_display with context -%}
{%- from 'macro.jinja2' import output_text with context -%}

{%- if 'hide' not in option -%}
  {%- if 'display' not in option -%}
    <div class="pheasant-fenced-code pheasant-input"><pre><code class="{{ language  }}">{{ code }}</code></pre></div>
    {%- for output in outputs if output.type != 'display_data' and 'text/html' not in output.data and 'text/latex' not in output.data -%}
      {%- if output.type == 'error' -%}
          <div class="pheasant-fenced-code pheasant-error"><pre><code class="{{ language }}">{{ output_text(output) }}</code></pre></div>
      {%- else -%}
          <div class="pheasant-fenced-code pheasant-output"><pre><code class="{{ language }}">{{ output_text(output) }}</code></pre></div>
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
  {%- for output in outputs if output.type == 'display_data' or 'text/html' in output.data or 'text/latex' in output.data -%}
    {{ output_display(output, true)  }}
  {%- endfor -%}
{%- endif -%}
